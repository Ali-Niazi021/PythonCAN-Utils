# Backend Configuration Example
# Copy to .env and modify as needed

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# CORS Settings (for production, specify frontend domain)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info

# Default CAN Settings (optional)
DEFAULT_DEVICE_TYPE=pcan
DEFAULT_CHANNEL=USB1
DEFAULT_BAUDRATE=BAUD_500K
